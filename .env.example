# Firebase Client Configuration (Public)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
FIREBASE_APP_ID=your-firebase-app-id

# Firebase Admin Configuration (Server-side)
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id",...}

# Application Configuration
APP_URL=http://localhost:3000

# GoPay Payment Gateway Configuration
# Get sandbox credentials from: https://help.gopay.com/en/s/ey
# For production credentials, contact GoPay sales team
GOPAY_CLIENT_ID=your-gopay-client-id
GOPAY_CLIENT_SECRET=your-gopay-client-secret
GOPAY_MERCHANT_ID=your-gopay-merchant-id
GOPAY_IS_PRODUCTION=false

# Stripe Payment Gateway Configuration
# Get test keys from: https://dashboard.stripe.com/test/apikeys
# For production keys, use live mode in dashboard
STRIPE_PUBLIC_KEY=pk_test_your-publishable-key
STRIPE_SECRET_KEY=sk_test_your-secret-key
# Webhook secret (get from Stripe Dashboard > Webhooks or Stripe CLI)
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Superfaktura Invoice API Configuration
# Get credentials from: https://sandbox.superfaktura.sk/tools/api (sandbox)
# or https://moja.superfaktura.sk/tools/api (production)
SUPERFAKTURA_EMAIL=your-superfaktura-email@example.com
SUPERFAKTURA_API_KEY=your-superfaktura-api-key
SUPERFAKTURA_COMPANY_ID=your-company-id
SUPERFAKTURA_IS_SANDBOX=true
