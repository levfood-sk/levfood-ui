# Firebase Client Configuration (Public)
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
FIREBASE_APP_ID=your-firebase-app-id
FIREBASE_VAPID_KEY=your-vapid-key

# Firebase Admin Configuration (Server-side)
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id",...}

# Application Configuration
APP_URL=http://localhost:3000

# Stripe Payment Gateway Configuration
# Get test keys from: https://dashboard.stripe.com/test/apikeys
# For production keys, use live mode in dashboard
STRIPE_PUBLIC_KEY=pk_test_your-publishable-key
STRIPE_SECRET_KEY=sk_test_your-secret-key
# Webhook secret (get from Stripe Dashboard > Webhooks or Stripe CLI)
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# Superfaktura Invoice API Configuration
# Get credentials from: https://sandbox.superfaktura.sk/tools/api (sandbox)
# or https://moja.superfaktura.sk/tools/api (production)
SUPERFAKTURA_EMAIL=your-superfaktura-email@example.com
SUPERFAKTURA_API_KEY=your-superfaktura-api-key
SUPERFAKTURA_COMPANY_ID=your-company-id
SUPERFAKTURA_IS_SANDBOX=true

# Google Analytics Configuration
# Get your GA4 measurement ID from: https://analytics.google.com/
# Format: G-XXXXXXXXXX
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# SMTP Email Configuration
SMTP_HOST=smtp.levfood.sk
SMTP_PORT=587
SMTP_USER=your-email@levfood.sk
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@levfood.sk
SMTP_FROM_NAME=LevFood
SMTP_SECURE=false

# Admin Notification Email
# Email address(es) to receive order notifications (comma-separated for multiple recipients)
# Examples:
#   Single: ADMIN_NOTIFICATION_EMAIL=admin@levfood.sk
#   Multiple: ADMIN_NOTIFICATION_EMAIL=admin@levfood.sk,manager@levfood.sk,owner@levfood.sk
ADMIN_NOTIFICATION_EMAIL=info@levfood.sk,kocisek.martin@gmail.com

# Sentry Error Tracking (Production)
# Get auth token from: https://sentry.io/settings/auth-tokens/
# DSN is configured in sentry.server.config.ts
SENTRY_AUTH_TOKEN=sntrys_your-auth-token-here