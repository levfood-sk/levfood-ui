rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Modal collection - only authenticated users can read/write
    match /modal/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Clients collection
    match /clients/{clientId} {
      // Server can create clients (during order creation)
      allow create: if true;

      // Only authenticated users can read clients (admin)
      allow read: if isAuthenticated();

      // Server and admins can update client data
      allow update: if true;

      // No deletion allowed
      allow delete: if false;
    }

    // Orders collection
    match /orders/{orderId} {
      // Anyone can create orders (public form submission)
      allow create: if true;

      // Only authenticated users can read orders (admin)
      allow read: if isAuthenticated();

      // Only authenticated users can update orders (admin status changes)
      allow update: if isAuthenticated();

      // No deletion allowed
      allow delete: if false;
    }

    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
