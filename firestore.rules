rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // NOTE: These rules apply to client-side Firestore SDK access only.
    // Server-side API routes use Firebase Admin SDK which bypasses these rules.
    // Server-side authentication is enforced by requireAuth() in API routes.

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Modal collection - only authenticated users can read/write
    match /modal/{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }

    // Clients collection
    match /clients/{clientId} {
      // Server can create clients (during order creation via API)
      // Also allow client-side creation for public order forms
      allow create: if true;

      // Only authenticated users can read clients (admin dashboard)
      allow read: if isAuthenticated();

      // Only authenticated users (admins) can update client data
      allow update: if isAuthenticated();

      // No deletion allowed
      allow delete: if false;
    }

    // Orders collection
    match /orders/{orderId} {
      // Anyone can create orders (public form submission)
      allow create: if true;

      // Only authenticated users can read orders (admin dashboard)
      allow read: if isAuthenticated();

      // Only authenticated users can update orders (admin status changes)
      allow update: if isAuthenticated();

      // No deletion allowed
      allow delete: if false;
    }

    // Meals collection - for managing weekly meal plans
    match /meals/{weekId} {
      // Only authenticated users (admins) can read meals
      allow read: if isAuthenticated();

      // Only authenticated users (admins) can write meals
      allow create, update: if isAuthenticated();

      // No deletion allowed
      allow delete: if false;
    }

    // Admin users collection - for managing admin/employee accounts
    match /admin-users/{userId} {
      // Only authenticated users (admins) can read admin users
      allow read: if isAuthenticated();

      // Only authenticated users (admins) can create/update admin users
      allow create, update: if isAuthenticated();

      // No deletion allowed
      allow delete: if false;
    }

    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
